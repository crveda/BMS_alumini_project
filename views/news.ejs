<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../CSS/events.css">
    <title>News Feed </title>
    <script src="https://kit.fontawesome.com/b4df2e2151.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="navBar">
            <div class="logoBox">
                <div class="logo_img">
                    <img src="./images/logo.png">
                </div>
                <div class="text_box">
                    <h2>B.M.S ALUMINI NETWORK</h2><br>
                    <p>Autonoumous Institute, Affiliated to VTU</p><br>
                    <p>Estd, 1946</p>
                </div>
            </div>
            <div class="navLinkBox">
                <ul>
                    <li><a href="/home">HOME</a></li>
                    <li><a href="/events">EVENTS</a></li>
                    <li><a href="/gallery">GALLERY</a></li>
                    <li><a href="/alumini">ALUMINI'S</a></li>
                    <li><a href="/News_feed">NEWSLETTER</a></li>
                    <% if(isAuth) { %>
                        <li><a href="/logOut">LOGOUT</a></li>
                    <% } else { %>
                      <li><a href="/join">JOIN</a></li>
                      <% } %>
                  </ul> 
            </div>
        </div>
        <div class="events_main_block">
            <div class="events_menu">
                <ul>
                    <li><div class="events"><a href="/registerNews">Update Feed</a></div></li>
                    <li><div class="events"><a href="/News_feed">All News</a></div></li>
            </div>
            <div class="events_display_block">
                <div class="events_heading">News</div>
                <% if(newsList.length > 0) { %>
                    <% for(let news of newsList) { %>
                        <div class="events_row_col_1">
                            <div class="event_pic"><img src="<%= news.posterUrl%>"></div>
                            <div class="event_details">
                                <div class="event_name">
                                    <h2><%= news.headings%></h2>
                                </div>
                                <div class="event_timing">
                                    <div class="timing">
                                        <p><%= news.describe %></p>
                                    </div>
                                </div>
                                <div class="mode_particpants">
                                    <div class="register_button">
                                        <a href="/<%= news.link %>">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } else {%>
                    <h1>NO NEWS FEED</h1>
                <% } %>
                

            </div>
        </div>
        <div class="navBar">
            <div class="vachira">
                <h2>B.M.S. Alumni Network</h2>
                <br>
                <p>Basavangudi, Bangalore</p>
            </div>
            <div class="connectToUs">
                 <h2>connet with us </h2>
            </div>
            <div class="social_media">
                <ul>
                    <li><i class="fab fa-facebook-f"></i></li>
                    <li><i class="fab fa-twitter"></i></li>
                    <li><i class="fab fa-instagram"></i></li>
                    <li><i class="fab fa-whatsapp"></i></li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>